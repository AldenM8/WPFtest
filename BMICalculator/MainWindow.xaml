<Window x:Class="BMICalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BMI 計算機" Height="250" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="體重 (kg):" />
            <TextBox x:Name="txtWeight"/>
            <TextBlock Text="身高 (cm):" />
            <TextBox x:Name="txtHeight"/>
            <Button Content="計算 BMI" Click="CalculateBMI" Margin="0,10,0,0"/>
            <TextBlock x:Name="txtResult" FontWeight="Bold" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
